#!/usr/bin/env bash

set -euo pipefail

# NPM publish script for AgentGo Node.js SDK

echo "ğŸš€ Starting NPM publish process..."

# Run release environment check first
echo "ğŸ“‹ Running release environment check..."
if ! ./bin/check-release-environment; then
    echo "âŒ Release environment check failed. Aborting publish."
    exit 1
fi

# Get package version
PACKAGE_VERSION=$(node -p "require('./package.json').version")
PACKAGE_NAME=$(node -p "require('./package.json').name")

echo "ğŸ“¦ Publishing $PACKAGE_NAME@$PACKAGE_VERSION"

# Check if this version already exists on npm
if npm view "$PACKAGE_NAME@$PACKAGE_VERSION" version >/dev/null 2>&1; then
    echo "âŒ Error: Version $PACKAGE_VERSION already exists on npm."
    echo "Please update the version in package.json before publishing."
    exit 1
fi

# Clean and rebuild
echo "ğŸ§¹ Cleaning previous build..."
npm run clean

echo "ğŸ”¨ Building package..."
npm run build

# Verify build artifacts exist
if [ ! -d "dist" ]; then
    echo "âŒ Error: dist directory not found after build."
    exit 1
fi

if [ ! -f "dist/index.js" ] || [ ! -f "dist/index.d.ts" ]; then
    echo "âŒ Error: Required build artifacts not found."
    echo "Expected: dist/index.js, dist/index.d.ts"
    exit 1
fi

# Set npm registry authentication
if [ -n "${NPM_TOKEN:-}" ]; then
    echo "ğŸ” Setting up npm authentication..."
    echo "//registry.npmjs.org/:_authToken=${NPM_TOKEN}" > ~/.npmrc
fi

# Determine if this is a pre-release
if echo "$PACKAGE_VERSION" | grep -E '\-[a-zA-Z0-9-]+$'; then
    echo "ğŸ”– Detected pre-release version: $PACKAGE_VERSION"
    PUBLISH_TAG="beta"
else
    echo "ğŸ”– Detected stable release version: $PACKAGE_VERSION"
    PUBLISH_TAG="latest"
fi

# Publish to npm
echo "ğŸ“¤ Publishing to npm with tag: $PUBLISH_TAG"
if npm publish --tag "$PUBLISH_TAG" --access public; then
    echo "âœ… Successfully published $PACKAGE_NAME@$PACKAGE_VERSION!"
    
    # Create git tag
    echo "ğŸ·ï¸  Creating git tag..."
    git tag "v$PACKAGE_VERSION"
    git push origin "v$PACKAGE_VERSION"
    
    echo "ğŸ‰ Release completed successfully!"
    echo "ğŸ“¦ Package: https://www.npmjs.com/package/$PACKAGE_NAME"
    echo "ğŸ·ï¸  Tag: v$PACKAGE_VERSION"
    
    # Clean up npmrc if we created it
    if [ -n "${NPM_TOKEN:-}" ]; then
        rm -f ~/.npmrc
    fi
else
    echo "âŒ Failed to publish to npm."
    
    # Clean up npmrc if we created it
    if [ -n "${NPM_TOKEN:-}" ]; then
        rm -f ~/.npmrc
    fi
    
    exit 1
fi 